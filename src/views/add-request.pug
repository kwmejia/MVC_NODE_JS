extends layout

block content
  .container.mx-auto.p-8
    h1.text-3xl.font-bold.text-center.mb-6 Sistema de Soporte al Cliente

    // Formulario para enviar solicitudes
    .bg-white.shadow-md.rounded-lg.p-6
      h2.text-2xl.font-semibold.mb-4 Enviar una Solicitud
      form(action="/submit" method="POST")
        .mb-4
          label(for="name" class="block text-sm font-medium text-gray-700") Nombre
          input(type="text" name="name" id="name" required class="mt-1 block w-full p-2 border rounded-md focus:ring-blue-500 focus:border-blue-500")
        .mb-4
          label(for="email" class="block text-sm font-medium text-gray-700") Correo Electr√≥nico
          input(type="email" name="email" id="email" required class="mt-1 block w-full p-2 border rounded-md focus:ring-blue-500 focus:border-blue-500")
        .mb-4
          label(for="subject" class="block text-sm font-medium text-gray-700") Asunto
          input(type="text" name="subject" id="subject" required class="mt-1 block w-full p-2 border rounded-md focus:ring-blue-500 focus:border-blue-500")
        .mb-4
          label(for="message" class="block text-sm font-medium text-gray-700") Mensaje
          textarea(name="message" id="message" rows="4" required class="mt-1 block w-full p-2 border rounded-md focus:ring-blue-500 focus:border-blue-500")
        .text-right
          button(type="submit" class="bg-pink-600  hover:bg-pink-400 text-white font-semibold px-4 py-2 rounded-lg") Enviar Solicitud